<mah:MetroWindow x:Class="MahApps2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MahApps2"
        mc:Ignorable="d"
        TitleCharacterCasing="Normal"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Icon="/Assets/Images/cash.ico"
        ResizeMode="CanResizeWithGrip"
        BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
        BorderThickness="5"
        Title="MyBudget" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = "*"/>
                <ColumnDefinition Width = "100"/>
                <ColumnDefinition Width = "100"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <Button Click="Button_Click">Flyout</Button>

            <Button Style="{StaticResource MahApps.Styles.Button.Square.Accent}" Grid.Column="1">
                Hello
            </Button>

            <Button 
                x:Name="NewBudgetButton"
                Grid.Column="2"
                Height="50" 
                Width="50"
                Margin="5"
                Style="{StaticResource MahApps.Styles.Button.Circle}"
                Background="{StaticResource MahApps.Brushes.Accent}"
                Click="NewBudgetButton_Click">
                <mah:FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" Foreground="White" />
            </Button>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="180.667" />
                <ColumnDefinition Width="13.333" />
            </Grid.ColumnDefinitions>

            <ListView Grid.Column="0"
                      BorderThickness="1"
                      x:Name="BudgetListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Start Date" DisplayMemberBinding="{Binding StartDate}"/>
                        <GridViewColumn Header="End Date" DisplayMemberBinding="{Binding EndDate}"/>
                        <GridViewColumn Header="Budget Amount" DisplayMemberBinding="{Binding BudgetAmount}"/>
                    </GridView>
                </ListView.View>
            </ListView>


            <StackPanel
                x:Name="BudgetStackPanel"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Orientation="Vertical"
                Visibility="Collapsed">
                <DatePicker 
                    x:Name="StartDatePicker"
                    Margin="3"
                    mah:TextBoxHelper.UseFloatingWatermark="True"
                    mah:TextBoxHelper.Watermark="Start Date" />
                <DatePicker
                    x:Name="EndDatePicker"
                    Margin="3"
                    mah:TextBoxHelper.UseFloatingWatermark="True"
                    mah:TextBoxHelper.Watermark="=End Date" />
                <TextBox
                    x:Name="TotalBudgetTextBox"
                    Margin="3"
                    mah:TextBoxHelper.UseFloatingWatermark="True"
                    mah:TextBoxHelper.Watermark="Total Budget" />
                <Button x:Name="CreateBudgetButtom" 
                        Content="Create Budget"
                        mah:ControlsHelper.ContentCharacterCasing="Normal"
                        Style="{StaticResource MahApps.Styles.Button.Square.Accent}" 
                        Click="CreateBudgetButtom_Click"
                        />

            </StackPanel>
        </Grid>


        <mah:FlyoutsControl>
            <mah:Flyout
                x:Name="UpdateFlyout"
                Width="1000px"
                Position="Top"
                AutoCloseInterval="3000" 
                IsAutoCloseEnabled="True">
                <TextBlock
                    x:Name="FlyoutTextBlock"
                    FontSize="24" 
                    Width="500px" 
                    TextAlignment="Center" 
                    Margin="-275,0,0,0"
                    Padding="10">
                    Budget Created!
                </TextBlock>
            </mah:Flyout>
        </mah:FlyoutsControl>




        <StatusBar Grid.Row="2">
            <StatusBarItem FontSize="16">Remaining  Monthly Budget</StatusBarItem>
            <StatusBarItem>
                <TextBlock FontSize="16" Text="{Binding RemainingBalance}"></TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</mah:MetroWindow>
